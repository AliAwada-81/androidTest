<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IshtariStock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BF1B26</item>
        <item name="colorPrimaryVariant">#BF1B26</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">#BF1B26</item>
        <item name="android:actionMenuTextColor">#555555</item>
        <item name="android:textAppearanceLargePopupMenu">@style/menu_custom_text_style</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/menu_custom_text_style_small</item>
    </style>
    <style name="menu_custom_text_style" parent="android:TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">#555555</item>
    </style>
    <style name="menu_custom_text_style_small" parent="android:TextAppearance.Holo.Widget.PopupMenu.Small">
        <item name="android:textColor">#555555</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="AppTheme.PopupOverlay" tools:ignore="ResourceCycle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#00BCD4</item>
        <item name="colorAccent">#009688</item>
    </style>
    <style name="Theme.IshtariStock.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IshtariStock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IshtariStock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>